<div class="container">
    <div class="jumbotron">
        <img src="assets/img/burger3.gif" class="card-img-top" id="burgerimage" alt="burger">
        <h1 class="display-4">Eat the Burger!</h1>
        <div class="create-form">

            <h2 class="card-text">Order some burgers, devour some burgers</h2>
            <hr class="my-4">
            <p class="lead">
                <input type="text" name="newburger" id="newburger" class="create-form" placeholder="choose burger">
                <button type="submit" class="burgSubmit btn btn-success">
                    <span class="fa fa-thumbs-up"></span>
                </button>
            </p>
        </div>
    </div>


    <form>
        <div class="create-form">
            <div class="form-row">
                <div class="col">
                    <label for="order">Burger Order</label>

                    {{!-- <input type="text" class="form-control" placeholder="Burger order here"> --}}
                    <ul>
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <span data-id={{this.id}}-{{this.burger_name}}></span>
                        <button type="button" class="eatburger btn btn-warning" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span>{{this.burger_name}}</button>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>

                <div class="col">
                    <label for="eat">Devour your burger</label>
                    {{!-- <input type="text" class="form-control" placeholder="{{this.burger_name}}"> --}}
                    {{!-- <button id="create-form" href="#" class="btn btn-primary"><span><i class="fas
                                fa-teeth"></i></span>Eat
                    </button> --}}

                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{!-- <span data-id={{this.id}}-{{this.burger_name}}></span> --}}
                        <button type="button" class="trashburger btn btn-warning " data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">
                            {{this.burger_name}}</button>
                        {{/if}}
                        {{/each}}
                    </ul>


                </div>
            </div>
        </div>
    </form>
</div>

