<div class="container">
    <div class="jumbotron">
        <img src="" class="card-img-top" alt="burger image">
        <h1 class="display-4">Eat the Burger!</h1>
        <div class="create-form">

            <p class="card-text">Order some burgers, devour some burgers</p>
            <hr class="my-4">
            <p class="lead">
                <input type="text" name="newburger" id="newburger" class="create-form" placeholder="choose burger">
                <button type="submit" class="burgSubmit btn btn-success">
                    <span class="fa fa-thumbs-up"></span>
                </button>
            </p>
        </div>
    </div>


    <form>
        <div class="create-form">
            <div class="form-row">
                <div class="col">
                    <label for="order">Burger Order</label>

                    {{!-- <input type="text" class="form-control" placeholder="Burger order here"> --}}
                    <ul>
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <span data-id={{this.id}}-{{this.burger_name}}></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span>{{this.burger_name}}</button>
                        {{/unless}}
                        {{/each}}
                    </ul>
                    <hr>
                </div>

                <div class="col">
                    <label for="eat"><strong>Devour your burger</strong></label>
                    {{!-- <input type="text" class="form-control" placeholder="{{this.burger_name}}"> --}}
                    {{!-- <button id="create-form" href="#" class="btn btn-primary"><span><i class="fas
                                fa-teeth"></i></span>Eat
                    </button> --}}

                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{!-- <span data-id={{this.id}}-{{this.burger_name}}></span> --}}
                        <button type="button" class="trashburger btn btn-warning " id="trashbutton"
                            data-id="{{this.id}}" data-newDevoured="{{devour}}">
                            {{this.burger_name}}</span></button>
                        {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
    </form>
</div>

<span class="fa fa-teeth-open"> </span>
<span "fas fa-utensils"></span>
<i class="fas fa-teeth-open"></i>


